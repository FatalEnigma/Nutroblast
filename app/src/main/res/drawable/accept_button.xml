<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="7dip" />
            <stroke android:width="2dip" android:color="@android:color/black" />
            <gradient android:startColor="@color/dark_grey" android:endColor="@color/dark_grey_2" android:angle="90" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="7dip" />
            <stroke android:width="2dip" android:color="@android:color/black" />
            <gradient android:startColor="@color/light_grey" android:endColor="@color/light_grey_2" android:angle="90" />
        </shape>
    </item>
</selector>